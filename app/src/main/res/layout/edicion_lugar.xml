<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/algoqueidenti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/identifique"
            android:textSize="20sp"
            android:inputType="textMultiLine"/>
        <LinearLayout
            android:id="@+id/layoutTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/spinnerTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/direccionDelLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/direLugar"
            android:textSize="20sp"
            android:inputType="textPostalAddress"/>
        <LinearLayout
            android:id="@+id/layoutTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telefono"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/telefcontacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/telepara"
                android:textSize="20sp"
                android:inputType="phone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/url"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/paginaWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/paginaWeb"
            android:textSize="20sp"
            android:inputType="textUri"/>

        <TextView
            android:id="@+id/comentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comentario"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/notas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/notas"
            android:textSize="20sp"
            android:inputType="textMultiLine"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>